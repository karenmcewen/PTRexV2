@model IEnumerable<PTRex.MVC.Models.TargetWorkout>


@{
    ViewBag.Title = "CreatePage2";
}

<h2>Create a Workout - Step Two</h2>


<h3>Here are all your exercises for the Day:</h3>


@*<p>
        @Html.ActionLink("Add a New Exercise to Your Workout", "Create")
