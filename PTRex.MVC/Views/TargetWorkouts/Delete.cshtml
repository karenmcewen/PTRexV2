@model PTRex.MVC.Models.TargetWorkout

@{
    ViewBag.Title = "Delete";
}
<link href="~/Content/TargetStyleSheet.css" rel="stylesheet" />
<div class="row target">

    <h2>MyR(e)x Plan - Delete an Exercise</h2>

</div>

<div>
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
            <div class="targetDeletePage">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@Html.DisplayFor(model => model.Exercis.Name)</h3>
                        <hr />
                        <h4>Exercise Nickname:</h4>
                        <p>@Html.DisplayFor(model => model.ExerciseNickName)</p>

                        <h4 class="noBreak"># Sessions per Day: </h4>
                        <p>@Html.DisplayFor(model => model.TargetSessionsPerDay)</p>
                        <h4 class="noBreak"># Sets per Session: </h4>
                        <p>@Html.DisplayFor(model => model.TargetNumSets)</p>
                        <h4 class="noBreak"># Reps per Set:</h4>
                        <p>@Html.DisplayFor(model => model.TargetNumReps)</p>

                        <h4>Notes:</h4>
                        <p>@Html.DisplayFor(model => model.TargetNotes)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row target">
        <h4>Are you sure you want to delete this exercise?</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back to Plan", "Index", null, new { @class = "btn btn-default" })
            </div>
        }

    </div>
</div>